<!DOCTYPE html>
<html>
  <head>
    <title>Adcharity</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'ADICO.ico' %>
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <header>
      <% if flash[:notice].present? %>
        <div class="alert alert-success" role="alert">
          <%= flash[:notice] %> 
        </div>
      <% end %>
      <% if flash[:alert].present? %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <div class="nav">
        <div class="nav-left">
          <ul>
            <li><%= link_to '瀏覽專案' , projects_path %></li>
            <li class="search_icon">
            <input class="search_project">
              <%= image_tag "search icon.svg" %>
            </li>
          </ul>
        </div>
        <div class="logo_container">
          <%= link_to image_tag("LOGOF.svg",:class=> "logo"), root_path %>
        </div>
        <div class="nav nav-right">
          <ul class="ul-right">
            <li class="coop">與我們合作</li>
            <li>關於我們</li>
            <li>
              <% if current_user %>
                <%= link_to image_tag("user_icon_not_active.svg", :class => "svg"), "#",:id => "user_toggle" %>
              <% else %>
                <%= link_to('登入', new_session_path(:user)) %>
              <% end %>
            </li>
          </ul>  
        </div>    
      </div>
      <div class="user_triangle"></div>    
    </header>
    <div class="user">
      <ul class="user_context">
        <li>Hi, XXX</li>
        <li><a href="#">會員專區</a></li>
        <li class="user_small_device"><a href="#">會員排行</a></li>
        <li><a href="#">推薦專案</a></li>
        <li><%= link_to('登出', destroy_user_session_path, :method => :delete) %></li>
      </ul>
    </div>
	  
	  <%# if current_user %>
    	<%#= link_to('登出', destroy_user_session_path, :method => :delete) %>
    	<%#= link_to('修改密碼', edit_registration_path(:user)) %>
  	<%# else %>
    	<%#= link_to('註冊', new_registration_path(:user)) %> 
    	<%#= link_to('登入', new_session_path(:user)) %> 
      <%#= link_to "登入 Facebook", user_facebook_omniauth_authorize_path %>
  	<%# end %>
    <%#= link_to '回首頁', root_path %>
    <%= yield %>
    <footer>
      <div class="footer-nav">
        <ul>
          <li><a href="#">關於我們</a></li>
          <li><a href="#">常見問題</a></li>
          <li><a href="#">合作提案</a></li>
          <li><a href="#">推薦專案</a></li>
          <li><a href="#">所有專案</a></li>
        </ul>
        <%= image_tag "alpha camp.png" %>
      </div>
      <div class="footer-right">
        <ul>
          <li><%= link_to image_tag("LOGOF.svg"), root_path %></li>
          <li><p> © AdCharity 2016</p></li>
        </ul>
        <div class="fanpage">
          <a href="https://www.facebook.com/AdCharity-%E7%9C%8B%E5%BB%A3%E5%91%8A%E5%81%9A%E5%85%AC%E7%9B%8A-1222839404414357/?fref=ts" target="_blank">
            <%= image_tag "Page 1.svg" %>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>

