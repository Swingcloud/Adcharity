<h2>編輯廣告</h2>
<%= form_for [:admin, @advertisement] do |f| %>
	<% if @advertisement.errors.any? %>
    <ul>
      <% @advertisement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
	<% end %>
	<%= render :partial => "form", :locals => {:f => f} %>
	<%= f.submit "送出" , :class =>"btn btn-primary"%>
<% end %>