

<div class="form-group col-lg-12">
  <%= f.label :name, "名稱" %>
  <%= f.text_field :name ,:class =>"form-control"%>
</div>
<div class="form-group col-lg-12">
  <%= f.label :english_name, "英文名稱" %>
  <%= f.text_field :english_name ,:class =>"form-control"%>
</div>
<div class="form-group col-lg-12">
  <%= f.label :description, "描述" %>
  <%= f.cktext_area :description, :class => "form-control", :ckeditor => {:language => 'zh-tw'} %>
</div>
<div class="form-group col-lg-12">
  <%= f.label :telephone, "電話" %>
	<%= f.text_field :telephone ,:class =>"form-control"%>
</div>
<div class="form-group col-lg-12">
  <%= f.label :email, "電子信箱"%>
  <%= f.text_field :email ,:class =>"form-control"%>
</div>
<div class="form-group col-lg-12">
  <%= f.label :address, "地址" %>
  <%= f.text_field :address ,:class =>"form-control"%>
</div>

<div class="form-group col-lg-12">
  <%= f.file_field :icon %>
  <% if @institute.icon.exists? %>
    <%= check_box_tag "remove_upload_file", "1" %>移除上傳檔案
  <% end %>
</div>